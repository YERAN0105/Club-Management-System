<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ood_cw.HelloController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/AdvisorStudent.jpg" />
         </image>
      </ImageView>
      <Button fx:id="StudentButtonID" layoutX="520.0" layoutY="433.0" mnemonicParsing="false" onAction="#onStudentClick" prefHeight="46.0" prefWidth="105.0" style="-fx-background-radius: 30 30 30 30; -fx-border-color: red; -fx-border-radius: 30 30 30 30; -fx-background-color: white;" text="STUDENT">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect></Button>
      <Button fx:id="advisorbuttonID" layoutX="289.0" layoutY="433.0" mnemonicParsing="false" onAction="#onAdvisorClick" prefHeight="45.0" prefWidth="105.0" style="-fx-background-radius: 30 30 30 30; -fx-border-color: red; -fx-border-radius: 30 30 30 30; -fx-background-color: white;" text="ADVISOR">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="SecondBackButtonId" alignment="BASELINE_LEFT" contentDisplay="TOP" layoutY="30.0" mnemonicParsing="false" onAction="#SecondBackButtonClick" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 0 60 60 0; -fx-border-color: black; -fx-border-radius: 0 60 60 0;" text="BACK">
         <font>
            <Font name="System Bold Italic" size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
