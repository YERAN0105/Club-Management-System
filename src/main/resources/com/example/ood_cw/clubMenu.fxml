<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="clubMenuPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ood_cw.HelloController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/BackGround2.jpg" />
         </image>
      </ImageView>
      <Button fx:id="createClubs" layoutX="300.0" layoutY="150.0" mnemonicParsing="false" onAction="#onCreateClubClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 20 20 20 20;" text="Create Club">
         <font>
            <Font size="25.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="showClubs" layoutX="300.0" layoutY="400.0" mnemonicParsing="false" onAction="#onShowClubClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 20 20 20 20;" text="Show Club">
         <font>
            <Font size="25.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="manageClubs" layoutX="300.0" layoutY="275.0" mnemonicParsing="false" onAction="#onManageClubClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 20 20 20 20;" text="Manage Club">
         <font>
            <Font size="25.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="backClubMenu" alignment="BASELINE_LEFT" layoutY="30.0" mnemonicParsing="false" onAction="#onBackClubMenuClick" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 0 60 60 0;" text="Back">
         <font>
            <Font name="System Bold Italic" size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
