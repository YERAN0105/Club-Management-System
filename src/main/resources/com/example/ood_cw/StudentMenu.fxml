<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="StudentMenuAnchor" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ood_cw.StudentMenu">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/BackGround2.jpg" />
         </image>
      </ImageView>
      <Button fx:id="StudentMenuViewlubButtonID" layoutX="300.0" layoutY="210.0" mnemonicParsing="false" onAction="#StudentMenuViewClubButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="View Club">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
      <Button fx:id="StudentMenuJoinClubButtonID" layoutX="299.0" layoutY="120.0" mnemonicParsing="false" onAction="#StudentMenuJoinClubButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="Join Club">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
      <Button fx:id="StudentMenuViewEventButtonID" layoutX="300.0" layoutY="300.0" mnemonicParsing="false" onAction="#StudentMenuViewEventButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="View Event">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
      <Button fx:id="StudentMenuBackButtonID" alignment="BASELINE_LEFT" layoutY="30.0" mnemonicParsing="false" onAction="#StudentMenuBackButtonClick" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 0 60 60 0; -fx-border-color: black; -fx-border-radius: 0 60 60 0;" text="BACK">
         <font>
            <Font name="System Bold Italic" size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect></Button>
      <Button fx:id="viewAttendanceButton" layoutX="300.0" layoutY="390.0" mnemonicParsing="false" onAction="#onViewAttendanceButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="View Attendeance">
         <effect>
            <InnerShadow />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
   </children>
</AnchorPane>
