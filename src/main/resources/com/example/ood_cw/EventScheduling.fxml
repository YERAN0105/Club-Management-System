<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="eventSchedulingAnchor" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ood_cw.HelloController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/BackGround2.jpg" />
         </image>
      </ImageView>
      <Button layoutX="300.0" layoutY="170.0" mnemonicParsing="false" onAction="#onScheduleEventButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="Schedule Events" textOverrun="CLIP">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button layoutX="300.0" layoutY="250.0" mnemonicParsing="false" onAction="#onScheduleMeetingButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="Schedule Meetings" textOverrun="CLIP">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button layoutX="300.0" layoutY="330.0" mnemonicParsing="false" onAction="#onScheduleActivityButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="Schedule Activities" textOverrun="CLIP">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button alignment="BASELINE_LEFT" layoutY="30.0" mnemonicParsing="false" onAction="#onBackEventScheduleButtonClick" prefHeight="60.0" prefWidth="110.0" style="-fx-background-radius: 0 60 60 0; -fx-border-color: black; -fx-border-radius: 0 60 60 0;" text="Back">
         <font>
            <Font name="System Bold Italic" size="20.0" />
         </font>
      </Button>
      <Button layoutX="300.0" layoutY="410.0" mnemonicParsing="false" onAction="#onEventSchedulingViewOrDeleteButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-background-radius: 10 10 10 10;" text="View/Delete Events">
         <font>
            <Font size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <InnerShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
